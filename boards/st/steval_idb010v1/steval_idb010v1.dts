/dts-v1/;
#include <st/wb0/stm32wb07.dtsi>
#include <st/wb0/stm32wb07ccfx-pinctrl.dtsi>
#include <zephyr/dt-bindings/pwm/pwm.h>
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
	model = "STMicroelectronics BlueNRG-LP Evaluation Platform";
	compatible = "st,steval-idb010v1";

	#address-cells = <1>;
	#size-cells = <1>;

	chosen {
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	leds: leds {
		compatible ="gpio-leds";
		blue_led_1: led_0 {
			gpios = <&gpioa 5 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
		};
		green_led_1: led_1 {
			gpios = <&gpiob 8 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
		};
		red_led_1: led_2 {
			gpios = <&gpiob 9 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
		};
	};

	pwmleds: pwmleds {
		compatible = "pwm-leds";
		status = "okay";

		red_pwm_led: red_pwm_led {
			pwms = <&pwm1 2 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		user_button_1: button_0 {
			label = "SW1";
			gpios = <&gpioa 10 GPIO_ACTIVE_HIGH>;
			zephyr,code = <INPUT_KEY_0>;
		};
		user_button_2: button_1 {
			label = "SW2";
			gpios = <&gpiob 6 GPIO_ACTIVE_HIGH>;
			zephyr,code = <INPUT_KEY_1>;
		};
	};

	aliases {
		led0 = &blue_led_1;
		led1 = &green_led_1;
		led2 = &red_led_1;
		pwm-led0 = &red_pwm_led;
		sw0 = &user_button_1;
		sw1 = &user_button_2;
	};
};

&clk_lse {
	status = "disabled";
};

&clk_hse {
	status = "okay";
};

&clk_hsi {
	status = "okay";
};

&pll {
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(64)>;
	clksys-prescaler = <1>;
	slow-clock = <&clk_lse>;
};

&usart1 {
	pinctrl-0 = <&usart1_tx_pa9 &usart1_rx_pa8>;
	pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
};

&i2c1 {
	pinctrl-0 = <&i2c1_scl_pa0 &i2c1_sda_pa1>;
	pinctrl-names = "default";
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;

	lps22hh@5c {
		compatible = "st,lps22hh";
		reg = <0x5c>;
	};
};

&spi1 {
	pinctrl-0 = <&spi1_nss_pa11 &spi1_sck_pa13 &spi1_miso_pa14 &spi1_mosi_pa15>;
	pinctrl-names = "default";
	status = "okay";

	lsm6dso: lsm6dso@0 {
		compatible = "st,lsm6dso";
		spi-max-frequency = <1000000>;
		reg = <0>;
		irq-gpios = <&gpiob 14 GPIO_ACTIVE_HIGH>;
		int-pin = <1>;
	};
};

&timers1 {
	status = "okay";

	pwm1: pwm {
		/* PWM on blue_led_1 */
		pinctrl-0 = <&tim1_ch2_pa5>;
		pinctrl-names = "default";
		status = "okay";
	};
};

# Enable SMPS in regulation mode and select correct BOM
CONFIG_POWER_SUPPLY_SMPS_SUPPLIES_LDO=y
CONFIG_SMPS_BOM_3=y

# Enable clock
CONFIG_CLOCK_CONTROL=y

# Enable GPIO
CONFIG_GPIO=y

# Enable pin controller
CONFIG_PINCTRL=y

# Enable UART driver
CONFIG_SERIAL=y

# Enable console
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y
